<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h2>Your Cart</h2>
<table>
  <%= render(cart.line_items) %>
  <tfoot>
    <tr>
      <th colspan="2">Total:</th>
      <td class="price"><%=number_to_currency(cart.total_price)%></td>
    </tr>
  </tfoot>
</table>
<h2><%= request.path %></h2>
<div class="actions">
  <%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, disabled: (request.path.split('/')[1] == "orders" ? true : false) %>
  <%= button_to'Checkout', new_order_path, method: :get, class: "checkout", disabled: (request.path.split('/')[1] == "orders" ? true : false) %>
</div>
